<!--index.wxml-->
<view class="container">
  <div class="game-form">
    <view class="game-theme">
      <image class="bg-img" src="/images/index-bg.png" mode="widthFix" ></image>
      <image class="bg-img white-line" src="/images/ball-park.png" mode="widthFix" ></image>
    </view>
    <view class="create-area">
      <view class="motion-type">
        <view class="motion-type-item {{game_type == '1' ? 'active' : ''}}" data-type="1" bindtap="switchType">普通模式</view>
        <view class="motion-type-item {{game_type == '2' ? 'active' : ''}}" data-type="2" bindtap="switchType">专业模式</view>
      </view>
      <view class="section">
        <input 
          type="text" 
          class="game-attr" 
          value="{{game_title}}" 
          bindinput="setGame" 
          maxlength="30" 
          placeholder="比赛名称" 
          data-field="game_title" />
      </view>
      <view class="section">
        <input 
          type="text" 
          class="game-attr" 
          value="{{red_name}}" 
          bindinput="setGame" 
          maxlength="30" 
          placeholder="红队名称" 
          data-field="red_name"/>
      </view>
      <view class="section">
        <input 
          type="text" 
          class="game-attr" 
          value="{{blue_name}}" 
          bindinput="setGame" 
          maxlength="30" 
          placeholder="蓝队名称" 
          data-field="blue_name" />
      </view>
      
      <button class="handle-btn" type="primary" bindtap="createGame" loading="{{loading}}" disabled="{{loading}}">开始比赛</button>
      <button class="handle-btn" bindtap="navigateToHistory">历史比赛</button> 
    </view>   
  </div>
</view>
